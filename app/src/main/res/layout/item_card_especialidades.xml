<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    card_view:cardElevation="5dp"
    android:background="#FFFFFF"
    android:layout_marginTop="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_marginRight="9dp"
        android:layout_marginLeft="7dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Contiene la imagen y los textos principales -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <ImageView
                android:id="@+id/item_especialidades_imagen_perfil"
                android:layout_marginTop="9dp"
                android:src="@drawable/default_perfil_hombre"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/item_especialidades_nombre"
                    android:layout_marginTop="10dp"
                    android:alpha=".8"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="RubÃ©n Alejandro Guardado Maldonado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_especialidades_titulo"
                    android:alpha=".57"
                    android:textColor="#000000"
                    android:layout_marginTop="9dp"
                    android:textSize="14sp"
                    android:text="Entrenador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_especialidad_especialidad"
                    android:alpha=".57"
                    android:textColor="#000000"
                    android:layout_marginTop="9dp"
                    android:textSize="14sp"
                    android:text="Especialidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/item_especialidades_descripcion"
            android:layout_marginTop="20dp"
            android:alpha=".57"
            android:textColor="#000000"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec maximus convallis dolor eu commodo. Ut in lobortis ligula, a maximus eros. Nunc sit amet blandit leo. Vivamus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_especialidades_escribir"
                android:textStyle="bold"
                android:textColor="@color/wallet_holo_blue_light"
                android:textSize="15sp"
                android:layout_marginRight="30dp"
                android:text="ESCRIBIR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_especialidades_llamar"
                android:textStyle="bold"
                android:textColor="@color/wallet_holo_blue_light"
                android:textSize="15sp"
                android:text="LLAMAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>