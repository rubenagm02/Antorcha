<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView

        android:layout_marginTop="20dp"
        android:src="@drawable/logo_antorcha"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="#000000"
        android:text="Bienvenido!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:alpha=".7"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Con antorcha podrás encontrar los eventos y los espacios deportivos más cercanos a tí."
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:alpha=".8"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Presiona "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/icono_marker_verde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-light"
            android:alpha=".8"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="ó"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/icono_marker_negro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif-light"
        android:alpha=".8"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="para más detalles "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:alpha=".87"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Al presionar en 'Buscar actividad' podrás personalizar el filtro de búsqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="right"
        android:id="@+id/dialogo_bienvenida_aceptar"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="@color/wallet_holo_blue_light"
        android:text="ACEPTAR"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>