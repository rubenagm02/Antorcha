<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
        android:id="@+id/drawer_imagen_perfil"
        android:layout_width="match_parent"
        android:layout_height="170dp" />
    <RelativeLayout
        android:background="@drawable/degradado_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:text="Nombre del miembro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:alpha=".9"
            android:src="@drawable/icono_triangulo"
            android:id="@+id/drawer_mas"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="11dp"
            android:layout_height="11dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Buscar actividad -->
        <LinearLayout
            android:id="@+id/drawer_layout_buscar_actividad"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:alpha=".5"
                android:layout_gravity="center_vertical"
                android:id="@+id/drawer_icono_buscar_actividad"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/drawer_texto_buscar_actividad"
                android:alpha=".7"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="Buscar actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- Actividades -->
        <LinearLayout
            android:id="@+id/drawer_layout_actividades"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:alpha=".5"
                android:id="@+id/drawer_icono_actividades"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/drawer_texto_actividades"
                android:alpha=".7"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="Actividades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/drawer_layout_perfil"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:alpha=".5"
                android:id="@+id/drawer_icono_perfil"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/drawer_texto_perfil"
                android:alpha=".7"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="Perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- Medallas -->
        <LinearLayout
            android:id="@+id/drawer_layout_medallas"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:alpha=".5"
                android:id="@+id/drawer_icono_medallas"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/drawer_texto_medallas"
                android:alpha=".7"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="Medallas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- Metas -->
        <LinearLayout
            android:id="@+id/drawer_layout_metas"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:alpha=".5"
                android:id="@+id/drawer_icono_metas"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/drawer_texto_metas"
                android:alpha=".7"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="Metas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>