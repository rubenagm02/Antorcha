<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:alpha=".8"
                android:textSize="22sp"
                android:textColor="#000000"
                android:text="Actualiza tu perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15sp"
                android:alpha=".57"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="Manten al día tu información personal para así poder brindarte información más adecuada a tus gustos."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:alpha=".57"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_diseno"
                android:layout_width="match_parent"
                android:layout_height="37dp" />
            <TextView
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:alpha=".57"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="Fecha de nacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:background="@drawable/edittext_diseno"
                android:text="Selecciona la fecha"
                android:layout_width="match_parent"
                android:layout_height="37dp" />
            <TextView
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:alpha=".57"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="¿Como te describes?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:lines="3"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_diseno"
                android:layout_width="match_parent"
                android:layout_height="111dp" />
            <TextView
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:alpha=".57"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="¿Cuales son tus principales intereses?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:lines="3"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_diseno"
                android:layout_width="match_parent"
                android:layout_height="111dp" />
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialogo_filtro_espacio_cancelar"
                    android:textSize="15sp"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:text="CANCELAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dialogo_filtro_espacio_aceptar"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:textSize="15sp"
                    android:layout_marginLeft="30dp"
                    android:text="GUARDAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>