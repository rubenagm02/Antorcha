<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.mx.antorcha.Activities.NuevoEvento">
    <android.support.v7.widget.Toolbar
        android:id="@+id/nuevo_evento_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:background="@drawable/degradado_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/nuevo_evento_regresar"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="Nuevo evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:alpha=".87"
                android:textColor="#000000"
                android:text="Nombre"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/nuevo_evento_nombre"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_diseno"
                android:layout_width="match_parent"
                android:layout_height="37dp" />
            <TextView
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:alpha=".87"
                android:textColor="#000000"
                android:text="DescripciÃ³n"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/nuevo_evento_descripcion"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_diseno"
                android:layout_width="match_parent"
                android:layout_height="62dp" />
            <TextView
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:alpha=".87"
                android:textColor="#000000"
                android:text="Lugar del evento"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/nuevo_evento_domicilio"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_diseno"
                android:layout_width="match_parent"
                android:layout_height="37dp" />
            <TextView
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:alpha=".87"
                android:textColor="#000000"
                android:text="Fecha del evento"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></DatePicker>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
