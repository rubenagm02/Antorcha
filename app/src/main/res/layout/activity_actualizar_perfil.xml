<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mx.antorcha.Activities.ActualizarPerfil">
    <android.support.v7.widget.Toolbar
        android:id="@+id/actualizar_perfil_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:background="@drawable/degradado_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/actualizar_perfil_atras"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="Actualizar Perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textSize="15sp"
                    android:alpha=".57"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="Manten al día tu información personal para así poder brindarte información más adecuada a tus gustos."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:alpha=".57"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:text="Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/actualizar_perfil_nombre"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_diseno"
                    android:layout_width="match_parent"
                    android:layout_height="37dp" />
                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:alpha=".57"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="Fecha de nacimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/actualizar_perfil_fecha_nacimiento"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="center"
                    android:background="@drawable/edittext_diseno"
                    android:text="Selecciona la fecha"
                    android:layout_width="match_parent"
                    android:layout_height="37dp" />
                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:alpha=".57"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="¿Como te describes?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/actualizar_perfil_descripcion"
                    android:lines="3"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_diseno"
                    android:layout_width="match_parent"
                    android:layout_height="111dp" />
                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:alpha=".57"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="¿Cuales son tus principales intereses?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/actualizar_perfil_intereses"
                    android:lines="3"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_diseno"
                    android:layout_width="match_parent"
                    android:layout_height="111dp" />
                <ImageView
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/actualizar_perfil_boton_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
