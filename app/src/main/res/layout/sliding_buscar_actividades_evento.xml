<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:alpha=".2"
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="13"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14sp"
                    android:alpha=".8"
                    android:textColor="#000000"
                    android:text="Nombre del evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:text="Personas que asistirán"
                    android:alpha=".5"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Fecha del evento"
                    android:alpha=".8"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/sliding_buscar_actividades_evento_contacto"
                    android:alpha=".4"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></LinearLayout>
                <ImageView
                    android:id="@+id/sliding_buscar_actividades_evento_compartir"
                    android:alpha=".4"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:alpha=".8"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/sliding_buscar_actividades_evento_ruta"
                    android:layout_width="23dp"
                    android:layout_height="23dp" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:alpha=".6"
                android:textColor="#000000"
                android:text="Domicilio del lugar donde se llevará a cabo"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:alpha=".1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:textSize="15sp"
                android:alpha=".8"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Descripción"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:alpha=".6"
                android:textColor="#000000"
                android:text="Descripcion del evento y todo lo que se quiera poner para que las personas asistan"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:alpha=".1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:alpha=".2"
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:alpha=".1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:textSize="15sp"
                android:alpha=".8"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>