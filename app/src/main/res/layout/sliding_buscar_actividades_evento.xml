<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:elevation="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/sliding_buscar_espacio_imagen_principal"
                    android:src="@drawable/default_espacio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="13"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/sliding_buscar_evento_nombre_principal"
                    android:textSize="14sp"
                    android:alpha=".8"
                    android:textColor="#000000"
                    android:text="Nombre del espacio deportivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sliding_buscar_evento_cantidad_personas"
                    android:layout_marginTop="5dp"
                    android:text="Horarios:"
                    android:alpha=".5"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sliding_buscar_evento_fecha_evento"
                    android:layout_marginTop="7dp"
                    android:text="Descripcion breve"
                    android:alpha=".8"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/sliding_buscar_actividades_evento_contacto"
                        android:alpha=".4"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"></LinearLayout>
                    <ImageView
                        android:id="@+id/sliding_buscar_actividades_evento_compartir"
                        android:alpha=".4"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:alpha=".8"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/sliding_buscar_actividades_evento_ruta"
                    android:layout_width="23dp"
                    android:layout_height="23dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/sliding_buscar_evento_lugar"
                android:layout_marginTop="10dp"
                android:alpha=".6"
                android:textColor="#000000"
                android:text="Domicilio del lugar donde se llevará a cabo"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:alpha=".1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:textSize="15sp"
                android:alpha=".8"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Descripción"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/sliding_buscar_evento_descripcion"
                android:layout_marginTop="10dp"
                android:alpha=".6"
                android:textColor="#000000"
                android:text="Descripcion del evento y todo lo que se quiera poner para que las personas asistan"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:alpha=".1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <ImageView
                    android:id="@+id/sliding_imagen_evento"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:alpha=".2"
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:alpha=".1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:textSize="15sp"
                android:alpha=".8"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:id="@+id/sliding_buscar_evento_asisto_evento"
                android:layout_width="match_parent"
                android:layout_height="42dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>