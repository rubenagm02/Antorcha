<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/item_disciplina_clic"
            android:layout_width="match_parent"
            android:layout_height="59dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/item_seleccionar_disciplina_check"
                    android:checked="false"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_seleccionar_disciplina_texto"
                    android:layout_marginLeft="35dp"
                    android:layout_gravity="center_vertical"
                    android:alpha=".87"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:text="Disciplina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:alpha=".3"
                android:id="@+id/item_seleccionar_disciplina_imagen"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="27dp"
                android:layout_height="27dp" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:alpha=".12"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/seleccionar_disciplina_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>