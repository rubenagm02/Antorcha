<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/medallas_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:background="@drawable/degradado_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/medallas_barra_drawer"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="Medallas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="#FFFFFF"
                android:id="@+id/medallas_layout_compartir"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/oculta"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/medallas_medalla_principal"
                    android:layout_marginTop="40dp"
                    android:layout_width="230dp"
                    android:layout_height="230dp" />
                <LinearLayout
                    android:layout_alignBottom="@+id/medallas_medalla_principal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:alpha=".7"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:id="@+id/medallas_tipo_medalla"
                        android:text="Chispa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:alpha=".7"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:id="@+id/medallas_nombre_medalla"
                        android:text="Nombre de medalla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:alpha=".7"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/medallas_descripcion_medalla"
                        android:text="La descripcion de la medalla obtenida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <!-- La imagen de compartir-->
            <ImageView
                android:alpha=".4"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/medallas_compartir"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:alpha=".8"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                android:text="15/46"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/medallas_cantidad_medallas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- PARTE DE MEDALLAS-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <!--Medallas visuales-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:alpha=".2"
                        android:layout_gravity="center"
                        android:id="@+id/medallas_flecha_izquierda"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:id="@+id/medallas_lista_medallas"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:alpha=".2"
                        android:layout_gravity="center"
                        android:id="@+id/medallas_flecha_derecha"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>


                <!-- Numero de medallas -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Prometeo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:alpha=".8"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Antorcha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:alpha=".8"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Fuego"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:alpha=".8"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Flama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:alpha=".8"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Chispa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:alpha=".8"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!-- El drawer -->
    <ListView android:id="@+id/lista_drawer"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#FFFFFF"/>

</android.support.v4.widget.DrawerLayout >
